	public static boolean isIDAvailable(int id) {
		List<POI> pois = new ArrayList<POI>();
		for(POI poi : pois) {
			if (id == poi.getId()) {
				System.out.println("Ya existe un poy con este id");
				return false;
			}
		}
		
		return true;
	}

}
